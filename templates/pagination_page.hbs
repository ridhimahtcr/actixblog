<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
body {
  margin: 0;
  font-family: "Lato", sans-serif;
}

.sidebar {
  margin: 0;
  padding: 0;
  width: 200px;
  background-color: #f1f1f1;
  position: fixed;
  height: 100%;
  overflow: auto;
}

.sidebar a {
  display: block;
  color: black;
  padding: 16px;
  text-decoration: none;
}

.sidebar a.active {
  background-color: #04AA6D;
  color: white;
}

.sidebar a:hover:not(.active) {
  background-color: #555;
  color: white;
}

div.content {
  margin-left: 200px;
  padding: 1px 16px;
  height: 1000px;
}

@media screen and (max-width: 700px) {
  .sidebar {
    width: 100%;
    height: auto;
    position: relative;
  }
  .sidebar a {float: left;}
  div.content {margin-left: 0;}
}

@media screen and (max-width: 400px) {
  .sidebar a {
    text-align: center;
    float: none;
  }
}
</style>
</head>
<body>

<div class="sidebar">
    <a class="active" href="#home">Home</a>
    <a href="#news">Posts only</a>
    <a href="">Categories Only</a>
</div>

<div class="content">
    MAIN PAGE
<p class="listing category">
    {{#each o}}
        <a href="/categories/{{this}}"><li>{{this}}</a>      <a href="/delete_category/{{this}}">Delete</a></p>
    {{/each}}
    </p>

    <p>
        {{#each cat}}
        <a href="/posts/{{this.title}}">
            {{#each this}}  " "
                {{ this }}
            {{/each}}"   "<a href="/delete_post/{{this.title}}">Delete </a> "    "<a href="/update_post/{{this.title}}">update </a> <br>
        {{/each}}</a>
    <P>
    <ul>



    </ul>






    <div class="pagination_logic">
        {{#each pages_count }}
            <a href="?page={{this}}">{{this}}</a>
        {{/each}}
    </div>

</div>
</body>
</html>

